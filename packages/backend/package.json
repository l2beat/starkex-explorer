{
  "name": "@explorer/backend",
  "version": "0.1.0",
  "private": true,
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "engines": {
    "node": "^16.0.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint --ext .ts --max-warnings 0 src test",
    "lint:fix": "yarn lint --fix",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "test": "mocha",
    "coverage": "nyc --reporter=lcov --reporter=text mocha",
    "coverage:serve": "nyc --reporter=html mocha && npx serve coverage",
    "start": "node -r source-map-support/register build/src",
    "dev": "node -r esbuild-register src"
  },
  "dependencies": {
    "@explorer/crypto": "*",
    "@explorer/encoding": "*",
    "@explorer/frontend": "*",
    "@explorer/shared": "*",
    "@explorer/state": "*",
    "@explorer/types": "*",
    "@koa/router": "^10.1.1",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-static": "^4.0.2",
    "@types/koa__router": "^8.0.11",
    "@types/lodash": "^4.14.182",
    "@types/pg": "^8.6.5",
    "chalk": "^5.0.1",
    "dotenv": "^16.0.1",
    "ethers": "^5.6.8",
    "knex": "^0.95.15",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.21",
    "object-hash": "^3.0.0",
    "pg": "^8.7.3",
    "source-map-support": "^0.5.21",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^9.1.2",
    "@types/object-hash": "^2.2.1",
    "@types/supertest": "^2.0.12",
    "supertest": "^6.2.3",
    "wait-for-expect": "^3.0.2"
  }
}
